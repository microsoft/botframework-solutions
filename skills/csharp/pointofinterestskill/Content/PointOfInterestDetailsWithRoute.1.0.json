{
  "type": "AdaptiveCard",
  "id": "PointOfInterestDetailsWithRouteCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "verticalContentAlignment": "Center",
                      "items": [
                        {
                          "type": "TextBlock",
                          "id": "CardTitle",
                          "horizontalAlignment": "Left",
                          "spacing": "None",
                          "size": "Large",
                          "weight": "Bolder",
                          "color": "Default",
                          "text": "@{if(Data.CardTitle == null, '', Data.CardTitle)}"
                        }
                      ],
                      "width": "stretch"
                    }
                  ]

                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "id": "Name",
          "horizontalAlignment": "Left",
          "spacing": "None",
          "size": "Medium",
          "weight": "Bolder",
          "color": "default",
          "text": "@{if(Data.Name == null, '', Data.Name)}"
        },
        {
          "type": "TextBlock",
          "id": "AvailableDetails",
          "spacing": "None",
          "color": "default",
          "text": "@{if(Data.AvailableDetails == null, '', Data.AvailableDetails)}"
        },
        {
          "type": "TextBlock",
          "id": "Address",
          "spacing": "None",
          "color": "default",
          "text": "@{if(Data.Address == null, '', Data.Address)}",
          "wrap": true,
          "maxLines": 2
        },
        {
          "type": "TextBlock",
          "id": "Hours",
          "spacing": "None",
          "color": "default",
          "text": "@{if(Data.Hours == null, '', Data.Hours)}",
          "wrap": true
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "Image",
          "horizontalAlignment": "center",
          "url": "@{if(Data.PointOfInterestImageUrl == null, '', Data.PointOfInterestImageUrl)}"
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "ColumnSet",
          "separator": true,
          "columns": [
            {
              "type": "Column",
              "style": "emphasis",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Center",
                  "size": "Medium",
                  "color": "default",
                  "text": "@{if(Data.TravelTime == null, '', Data.TravelTime)}"
                }
              ],
              "width": 20
            },
            {
              "type": "Column",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Left",
                  "text": "@{if(Data.DelayStatus == null, '', Data.DelayStatus)}"
                },
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Left",
                  "color": "default",
                  "text": "**ETA** @{if(Data.ETA == null, '', Data.ETA)}"
                }
              ],
              "width": 60
            },
            {
              "type": "Column",
              "style": "emphasis",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Center",
                  "size": "Medium",
                  "color": "default",
                  "text": "@{if(Data.Distance == null, '', Data.Distance)}"
                }
              ],
              "width": 20
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "horizontalAlignment": "Right",
          "size": "Small",
          "color": "default",
          "text": "@{if(Data.ProviderDisplayText == null, '', Data.ProviderDisplayText)}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "@{if(Data.ActionStartNavigation == null, '', Data.ActionStartNavigation)}",
      "data": {
        "msteams": {
          "type": "imBack",
          "value": "@{if(Data.ActionStartNavigation == null, '', Data.ActionStartNavigation)}"
        }
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "@{if(Data.Speak == null, '', Data.Speak)}"
}

