{
  "type": "AdaptiveCard",
  "id": "EmailCard",
  "body": [
    {
      "type": "Container",
      "id": "items",
      "items": []
    },

    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "id": "messageBody",
          "color": "Default",
          "text": "{EmailContent}",
          "wrap": true,
          "maxLines": 5
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "View",
      "url": "{EmailLink}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "{Speak}"
}