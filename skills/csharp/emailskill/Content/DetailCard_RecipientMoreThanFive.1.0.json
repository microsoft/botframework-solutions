{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "verticalContentAlignment": "Center",
                      "items": [
                        {
                          "type": "TextBlock",
                          "id": "title",
                          "size": "Large",
                          "weight": "Bolder",
                          "color": "Default",
                          "text": "{Subject}"
                        }
                      ],
                      "width": "stretch"
                    }
                  ]
                },
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "items": [
                        {
                          "type": "Image",
                          "id": "senderAvatar",
                          "style": "Person",
                          "url": "{SenderIcon}",
                          "size": "Medium"
                        }
                      ],
                      "width": "auto"
                    },
                    {
                      "type": "Column",
                      "verticalContentAlignment": "Center",
                      "items": [
                        {
                          "type": "ColumnSet",
                          "height": "stretch",
                          "columns": [
                            {
                              "type": "Column",
                              "horizontalAlignment": "Left",
                              "verticalContentAlignment": "Center",
                              "items": [
                                {
                                  "type": "TextBlock",
                                  "id": "senderName",
                                  "horizontalAlignment": "Left",
                                  "size": "Medium",
                                  "weight": "Bolder",
                                  "color": "Default",
                                  "text": "{Sender}"
                                }
                              ],
                              "width": "stretch"
                            },
                            {
                              "type": "Column",
                              "verticalContentAlignment": "Center",
                              "items": [
                                {
                                  "type": "TextBlock",
                                  "horizontalAlignment": "Right",
                                  "size": "Medium",
                                  "weight": "Bolder",
                                  "color": "Default",
                                  "text": "{ReceivedDateTime}"
                                }
                              ],
                              "width": "auto"
                            }
                          ]
                        },
                        {
                          "type": "ColumnSet",
                          "columns": [
                            {
                              "type": "Column",
                              "verticalContentAlignment": "Bottom",
                              "items": [
                                {
                                  "type": "TextBlock",
                                  "size": "Medium",
                                  "weight": "Bolder",
                                  "color": "Default",
                                  "text": "To"
                                }
                              ],
                              "width": "auto"
                            },
                            {
                              "type": "Column",
                              "verticalContentAlignment": "Center",
                              "items": [
                                {
                                  "type": "Image",
                                  "style": "Person",
                                  "url": "{RecipientIcon0}",
                                  "size": "Small"
                                }
                              ],
                              "width": "auto"
                            },
                            {
                              "type": "Column",
                              "verticalContentAlignment": "Center",
                              "items": [
                                {
                                  "type": "Image",
                                  "style": "Person",
                                  "url": "{RecipientIcon1}",
                                  "size": "Small"
                                }
                              ],
                              "width": "auto"
                            },
                            {
                              "type": "Column",
                              "verticalContentAlignment": "Center",
                              "items": [
                                {
                                  "type": "Image",
                                  "style": "Person",
                                  "url": "{RecipientIcon2}",
                                  "size": "Small"
                                }
                              ],
                              "width": "auto"
                            },
                            {
                              "type": "Column",
                              "verticalContentAlignment": "Center",
                              "items": [
                                {
                                  "type": "Image",
                                  "style": "Person",
                                  "url": "{RecipientIcon3}",
                                  "size": "Small"
                                }
                              ],
                              "width": "auto"
                            },
                            {
                              "type": "Column",
                              "verticalContentAlignment": "Center",
                              "items": [
                                {
                                  "type": "TextBlock",
                                  "horizontalAlignment": "Center",
                                  "size": "Medium",
                                  "weight": "Bolder",
                                  "color": "Default",
                                  "text": "\\+ {AdditionalRecipientNumber}"
                                }
                              ],
                              "width": "stretch"
                            }
                          ]
                        }
                      ],
                      "width": "stretch"
                    }
                  ]
                }
              ],
              "width": "stretch"
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
