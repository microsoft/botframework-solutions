{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "height": "stretch",
          "columns": [
            {
              "type": "Column",
              "height": "stretch",
              "items": [
                {
                  "type": "ColumnSet",
                  "height": "stretch",
                  "columns": [
                    {
                      "type": "Column",
                      "height": "stretch",
                      "verticalContentAlignment": "Center",
                      "items": [
                        {
                          "type": "TextBlock",
                          "size": "Large",
                          "weight": "Bolder",
                          "color": "Default",
                          "text": "{Description}",
                          "wrap": true,
                          "maxLines": 2
                        }
                      ],
                      "width": "stretch"
                    }
                  ]
                },
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "spacing": "Small",
                      "verticalContentAlignment": "Center",
                      "items": [
                        {
                          "type": "TextBlock",
                          "horizontalAlignment": "Center",
                          "size": "Medium",
                          "color": "Default",
                          "text": "{EmailIndexer}"
                        }
                      ],

                      "width": "auto"
                    }
                  ]

                }
              ],
              "width": "stretch"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "items",
      "items": []
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "horizontalAlignment": "Right",
          "size": "Small",
          "color": "Default",
          "text": "{MailSourceType}"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}