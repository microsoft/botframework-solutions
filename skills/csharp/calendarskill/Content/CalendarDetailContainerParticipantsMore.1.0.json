{
  "type": "AdaptiveCard",
  "id": "CalendarCard",
  "body": [
    {
      "type": "Container",
      "spacing": "Large",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "verticalContentAlignment": "Center",
                      "items": [
                        {
                          "type": "TextBlock",
                          "horizontalAlignment": "Left",
                          "size": "Large",
                          "weight": "Bolder",
                          "color": "Default",
                          "text": "{Title}",
                          "wrap": true
                        }
                      ],
                      "width": "stretch"
                    }
                  ]
                },
                {
                  "type": "ColumnSet",
                  "spacing": "Medium",
                  "columns": [
                    {
                      "type": "Column",
                      "verticalContentAlignment": "Center",
                      "items": [
                        {
                          "type": "TextBlock",
                          "id": "Time",
                          "size": "Medium",
                          "color": "Default",
                          "text": "{Time} ({Duration})"
                        },
                        {
                          "type": "TextBlock",
                          "id": "Date",
                          "horizontalAlignment": "Left",
                          "spacing": "Small",
                          "size": "Medium",
                          "color": "Default",
                          "text": "{Date}"
                        },
                        {
                          "type": "ColumnSet",
                          "id": "Participants",
                          "columns": [
                            {
                              "type": "Column",
                              "items": [
                                {
                                  "type": "Image",
                                  "style": "Person",
                                  "url": "{ParticipantPhoto1}",
                                  "size": "Medium"
                                }
                              ],
                              "width": "stretch"
                            },
                            {
                              "type": "Column",
                              "items": [
                                {
                                  "type": "Image",
                                  "style": "Person",
                                  "url": "{ParticipantPhoto2}",
                                  "size": "Medium"
                                }
                              ],
                              "width": "stretch"
                            },
                            {
                              "type": "Column",
                              "items": [
                                {
                                  "type": "Image",
                                  "style": "Person",
                                  "url": "{ParticipantPhoto3}",
                                  "size": "Medium"
                                }
                              ],
                              "width": "stretch"
                            },
                            {
                              "type": "Column",
                              "items": [
                                {
                                  "type": "Image",
                                  "style": "Person",
                                  "url": "{ParticipantPhoto4}",
                                  "size": "Medium"
                                }
                              ],
                              "width": "stretch"
                            },
                            {
                              "type": "Column",
                              "verticalContentAlignment": "Center",
                              "items": [
                                {
                                  "type": "TextBlock",
                                  "horizontalAlignment": "Center",
                                  "size": "Large",
                                  "weight": "Bolder",
                                  "color": "Default",
                                  "text": "\\+{OmittedParticipantCount}"
                                }
                              ],
                              "width": "stretch"
                            }
                          ]
                        },
                        {
                          "type": "ColumnSet",
                          "spacing": "Small",
                          "columns": [
                            {
                              "type": "Column",
                              "horizontalAlignment": "Left",
                              "spacing": "None",
                              "verticalContentAlignment": "Center",
                              "items": [
                                {
                                  "type": "TextBlock",
                                  "id": "Location",
                                  "horizontalAlignment": "Left",
                                  "size": "Medium",
                                  "color": "Default",
                                  "text": "{Location}",
                                  "wrap": true,
                                  "maxLines": 2
                                }
                              ],
                              "width": "auto"
                            }
                          ]
                        }
                      ],
                      "width": "stretch"
                    }
                  ]
                }
              ],
              "width": "stretch"
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "{Speak}"
}
