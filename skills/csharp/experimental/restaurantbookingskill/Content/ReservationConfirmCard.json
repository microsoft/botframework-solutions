{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "speak": "{Speak}",
  "id": "HeaderTableFooter",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Just confirming the reservation details",
          "wrap": true,
          "size": "medium"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Type",
              "value": "{Category}"
            },
            {
              "title": "Date",
              "value": "{ReservationDate}"
            },
            {
              "title": "Time",
              "value": "{ReservationTime}"
            },
            {
              "title": "Attendee Count",
              "value": "{AttendeeCount}"
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "{FooterText}",
          "wrap": true
        }
      ]
    }
  ]
}