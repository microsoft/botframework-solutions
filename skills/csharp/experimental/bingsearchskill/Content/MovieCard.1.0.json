{
  "type": "AdaptiveCard",
  "id": "MovieCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "verticalContentAlignment": "Center",
                      "items": [
                        {
                          "type": "TextBlock",
                          "id": "title",
                          "size": "ExtraLarge",
                          "weight": "Bolder",
                          "color": "Default",
                          "text": "{Name}",
                          "wrap": true
                        }
                      ],
                      "width": "stretch"
                    }
                  ]
                }
              ],
              "width": "stretch"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "Image",
                  "horizontalAlignment": "Left",
                  "url": "{Image}",
                  "size": "Large"
                }
              ],
              "width": "auto"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "size": "Large",
                  "weight": "Bolder",
                  "text": "{ContentRating}",
                  "isSubtle": true
                },
                {
                  "type": "TextBlock",
                  "size": "Large",
                  "text": "{Year}",
                  "isSubtle": true
                },
                {
                  "type": "TextBlock",
                  "size": "Large",
                  "text": "{GenreArray}",
                  "isSubtle": true,
                  "wrap": true,
                  "maxLines": 2
                },
                {
                  "type": "TextBlock",
                  "size": "Large",
                  "text": "{Duration}",
                  "isSubtle": true
                },
                {
                  "type": "TextBlock",
                  "size": "Large",
                  "weight": "Bolder",
                  "text": "{Rating}",
                  "isSubtle": true
                }
              ],
              "width": "stretch"
            }
          ]
        },
        {
          "type": "TextBlock",
          "id": "messageBody",
          "size": "Medium",
          "color": "default",
          "text": "{Description}",
          "wrap": true,
          "maxLines": 3
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "{Speak}"
}