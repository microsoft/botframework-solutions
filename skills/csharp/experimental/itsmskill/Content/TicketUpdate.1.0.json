{
  "type": "AdaptiveCard",
  "id": "TicketUpdateCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Left",
                  "size": "Medium",
                  "color": "Default",
                  "text": "{Title}",
                  "wrap": true
                }
              ],
              "width": "stretch"
            }
          ]
        },
        {
          "type": "TextBlock",
          "color": "Default",
          "text": "{UrgencyLevel}",
          "weight": "Bolder"
        },
        {
          "type": "TextBlock",
          "color": "Default",
          "text": "{State}"
        },
        {
          "type": "TextBlock",
          "size": "Small",
          "color": "Default",
          "text": "{OpenedTime}"
        },
        {
          "type": "TextBlock",
          "size": "Small",
          "color": "Default",
          "text": "{Number}"
        }
      ]
    },
    {
      "type": "TextBlock",
      "wrap": true,
      "text": "{Description}",
      "maxLines": 5
    },
    {
      "separator": true,
      "type": "TextBlock",
      "wrap": true,
      "text": "{ResolvedReason}",
      "maxLines": 5
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "horizontalAlignment": "Right",
          "size": "Small",
          "color": "default",
          "text": "{ProviderDisplayText}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "{ActionUpdateTitle}",
      "data": {
        "msteams": {
          "type": "imBack",
          "value": "{ActionUpdateValue}"
        }
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "{Speak}"
}
