{
  "type": "AdaptiveCard",
  "id": "FoodItemCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "{Quantity}",
              "horizontalAlignment": "Center"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "{Name}"
            },
            {
              "type": "TextBlock",
              "text": "{SpecialRequest}",
              "spacing": "None"
            }
          ],
          "width": "stretch"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "${Price}",
              "horizontalAlignment": "Right"
            }
          ],
          "width": "auto"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "{Speak}"
}