{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": 75,
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Left",
                  "spacing": "None",
                  "size": "Medium",
                  "weight": "Bolder",
                  "color": "Default",
                  "text": "{Name}"
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "color": "Default",
                  "text": "{AvailableDetails}"
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "color": "Default",
                  "text": "{Address}",
                  "maxLines": 1,
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "color": "Default",
                  "text": "{Hours}",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": 25,
              "verticalContentAlignment": "Center",
              "horizontalAlignment": "Center",
              "items": [
                {
                  "type": "Image",
                  "size": "stretch",
                  "url": "{PointOfInterestImageUrl}",
                  "horizontalAlignment": "Center"
                }
              ]
            }
          ]
        }
      ],
      "selectAction": {
        "type": "Action.Submit",
        "data": "{SubmitText}"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
