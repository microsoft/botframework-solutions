<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:clickable="true"
              android:background="@drawable/ripple" android:paddingLeft="8dp" android:paddingRight="8dp"
              android:paddingTop="16dp" android:paddingBottom="16dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                tools:text="Seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/widget_label"
                android:textSize="18sp" android:textAllCaps="false" android:textStyle="bold"/>
        <TextView
                tools:text="Seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/widget_event" android:layout_marginTop="8dp"
                android:textStyle="italic"/>
    </LinearLayout>
    <TextView
            tools:text="TOGGLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/widget_type"
            android:layout_gravity="center_vertical" android:typeface="monospace"
    />
</LinearLayout>