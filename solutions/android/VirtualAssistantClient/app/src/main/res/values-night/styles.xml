<resources>

    <!-- ALL THE NIGHT STYLES GO IN HERE -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- CHAT -->
    <style name="BackgroundStyle">
        <item name="android:background">@color/background_night</item>
    </style>

    <style name="ChatBotStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_chat_text_bot</item>
    </style>

    <style name="ChatUserStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_chat_text_user</item>
    </style>

    <style name="SuggestedActionStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Other Styles -->

    <style name="MicStyle">
        <item name="android:tint">@color/color_mic_night</item>
    </style>

    <style name="TextInputAccentStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/colorAccentNight</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:backgroundTint">@color/navigationDrawerNight</item>
        <item name="android:textColorPrimary">@color/navigationDrawerTextNight</item>
        <item name="android:textColorSecondary">@color/navigationDrawerTextNight</item>
    </style>

    <!-- SETTINGS -->
    <!-- SET TEXTVIEW STYLE TO MATCH INPUTTEXTVIEW, see:
     https://code.luasoftware.com/tutorials/android/make-android-spinner-same-look-as-edittext-with-textinputlayout -->
    <style name="TextView.InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

</resources>
