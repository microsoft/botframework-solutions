<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- CHAT -->
    <style name="ChatBotStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_chat_text_bot</item>
    </style>

    <style name="ChatUserStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_chat_text_user</item>
    </style>

    <style name="SuggestedActionStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- SETTINGS -->
    <!-- SET TEXTVIEW STYLE TO MATCH INPUTTEXTVIEW, see:
     https://code.luasoftware.com/tutorials/android/make-android-spinner-same-look-as-edittext-with-textinputlayout -->
    <style name="TextView.InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

</resources>
