{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "id": "SettingName",
                "size": "Medium",
                "weight": "Bolder",
                "text": "{SettingName}"
              },
                {
                    "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "items": [
                        {
                          "type": "Image",
                          "style": "Person",
                          "url": "",
                          "size": "Small"
                        }
                      ],
                      "width": "auto"
                    }
                  ]
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Action.Submit",
          "data": {
            "SettingChoice": "{SettingName}"
          }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0"
}