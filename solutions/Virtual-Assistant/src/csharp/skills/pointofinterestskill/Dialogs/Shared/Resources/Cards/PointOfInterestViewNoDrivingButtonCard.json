{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "speak": "{LocationName} is located at {SpeakAddress}",
  "id": "PointOfInterestViewNoDrivingButtonCard",
  "body": [
    {
      "type": "Image",
      "url": "{ImageUrl}",
      "size": "auto",
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "text": "{LocationName}",
      "size": "medium"
    },
    {
      "type": "TextBlock",
      "text": "{Address}",
      "size": "medium",
      "weight": "lighter"
    }
  ]
}