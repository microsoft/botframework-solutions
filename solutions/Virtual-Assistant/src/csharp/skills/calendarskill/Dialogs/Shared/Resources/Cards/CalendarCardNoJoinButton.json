{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "speak": "{Speak}",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "{Title}",
                    "weight": "bolder",
                    "size": "large",
                    "maxLines": 1
                },
                {
                    "type": "TextBlock",
                    "text": "{Content}"
                }

            ]
        }
    ]
}