  {
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "speak": "{Speak}",
  "id": "CusineChoiceCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "Container",
          "items": [
            {
              "type": "Image",
              "url": "{ImageUrl}",
              "size": "{ImageSize}",
              "horizontalAlignment": "{ImageAlign}"
            }
          ]
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "{Type}",
              "wrap": true,
              "size": "default"
            }
          ]
        }
      ]
    }, 
    {
      "selectAction": {
        "type": "Action.Submit",
        "title": "Submit action",
        "data": {
          "selectedItem": "{Name}"
        }
      }
    }
  ]
}