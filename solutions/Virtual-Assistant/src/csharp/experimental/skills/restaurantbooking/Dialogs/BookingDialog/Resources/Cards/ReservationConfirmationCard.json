{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "speak": "{Speak}",
  "id": "ReservationConfirmationCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "Image",
          "url": "{ImageUrl}",
          "size": "{ImageSize}",
          "horizontalAlignment": "{ImageAlign}"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "{BookingPlace}",
          "wrap": true,
          "size": "medium"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Location",
              "value": "{Location}"
            },
            {
              "title": "Date",
              "value": "{ReservationDate}"
            },
            {
              "title": "Time",
              "value": "{ReservationTime}"
            },
            {
              "title": "Attendee Count",
              "value": "{AttendeeCount}"
            }
          ]
        },
        {
          "type": "TextBlock",
          "text": "{FooterText}",
          "wrap": true
        }
      ]
    }
  ]
}