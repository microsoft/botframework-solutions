<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/push_to_talk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rect_round_corners_dark"
    android:clickable="true">

    <!-- The layout fills the height, which is important since the height varies between devices -->
    <ImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_above="@+id/text_push_to_talk"
        android:src="@drawable/ic_mic"/>

    <TextView
        android:id="@+id/text_push_to_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:text="@string/widget_push_to_talk"/>

</RelativeLayout>